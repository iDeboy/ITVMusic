<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Window Colors -->
    <SolidColorBrush x:Key="WindowBackground" Color="White"/>
    <SolidColorBrush x:Key="WindowForeground" Color="Gray"/>
    <SolidColorBrush x:Key="WindowBorderColor" Color="Black"/>
    
    <!-- Button Colors -->
    <SolidColorBrush x:Key="ActionButtonForeground" Color="#7376BD"/>
    <SolidColorBrush x:Key="ActionButtonOverForeground" Color="Black"/>
    <SolidColorBrush x:Key="ActionButtonOverBackground" Color="#B0E0E6"/>
    <SolidColorBrush x:Key="CloseActionButtonOverBackground" Color="#F08080"/>

    <!-- TextBlock Colors -->
    <SolidColorBrush x:Key="TextBoxTitleColor" Color="Gray"/>
    <SolidColorBrush x:Key="ErrorMessageColor" Color="#FB539B"/>
    <SolidColorBrush x:Key="SuccedMessageColor" Color="#2ECC71"/>

    <!-- TextBox Colors -->
    <SolidColorBrush x:Key="TextBoxContentColor" Color="Black"/>
    <SolidColorBrush x:Key="TextBoxBorderColor" Color="DarkSlateGray"/>
    
    <!-- Icon Colors -->
    <SolidColorBrush x:Key="TextBoxIconColor" Color="DarkSlateGray"/>

</ResourceDictionary>