<Button x:Class="ITVMusic.CustomControls.RoundedButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:ITVMusic.CustomControls"
        mc:Ignorable="d"
        d:DesignHeight="40" d:DesignWidth="150"
        
        Cursor="Hand">

    <Button.Template>

        <ControlTemplate TargetType="Button">
            <Border Width="{TemplateBinding Width}" 
                    Height="{TemplateBinding Height}"
                    CornerRadius="{Binding CornerRadius, RelativeSource={RelativeSource AncestorType=local:RoundedButton}}"
                    
                    Background="{TemplateBinding Background}">

                <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center">

                </ContentPresenter>
            </Border>
        </ControlTemplate>

    </Button.Template>

</Button>
